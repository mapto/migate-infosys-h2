enum Country {
	UNITED STATES,
    UNITED KINGDOM,
    GERMANY,
    FRANCE,
    ITALY,
    SPAIN,
    RUSSIA
}

enum Language {
	ENGLISH,
    SPANISH,
    FRENCH,
    RUSSIAN,
    ITALIAN
}

enum Gender {
	MALE,
    FEMALE,
    OTHER,
    UNSPECIFIED
}

entity Person {
	name String required
    gender Gender
    dob LocalDate
    country Country
    language Language
}

entity Institution {
	name String
    country Country
}

// actually piece of work, product
entity Work {
    name String
    published LocalDate
}

entity RoleWork{
	name String
    start LocalDate
    end LocalDate
}

// an ignored comment
/** not an ignored comment */
entity Location {
	address String
    country Country
}

entity RoleInstitution{
	name String
    start LocalDate
    end LocalDate
}

relationship OneToMany {

	Location{owner} to Institution{site}
}

relationship ManyToMany {
	Work{responsible} to Person
    Work{sponsor} to Institution{product}

    Person{role} to RoleInstitution
	Institution{role} to RoleInstitution

    Person{role} to RoleWork
	Work{role} to RoleWork
}